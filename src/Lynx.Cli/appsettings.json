{
  "GameParameters": {
    "Depth": 5,
    "QuiescenceSearchDepth": 12,
    "CoefficientBeforeKeyMovesBeforeMovesToGo": 1.5,
    "KeyMovesBeforeMovesToGo": 10,
    "CoefficientAfterKeyMovesBeforeMovesToGo": 0.9,
    "TotalMovesWhenNoMovesToGoProvided": 100
  },
  "NLog": {
    "autoreload": true,
    "internalLogLevel": "Error",
    "internalLogFile": "${basedir}/logs/internal-nlog.txt",
    "throwExceptions": true,
    "variables": {
      "logDirectory": "${basedir}/logs",
      "archiveLogDirectory": "${basedir}/logs/archives"
    },
    "targets": {
      "errors": {
        "type": "File",
        "layout": "${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}",
        "fileName": "${logDirectory}/errors-${date:format=yyyy-MM-dd}.log",
        "concurrentWrites": true,
        "keepFileOpen": false,
        "archiveFileName": "${archiveLogDirectory}/errors-{#}.log",
        "archiveEvery": "Day",
        "archiveNumbering": "DateAndSequence",
        "archiveDateFormat": "yyyy-MM-dd__HH_mm_ss",
        "maxArchiveFiles": 100
      },
      "logs": {
        "type": "File",
        "layout": "${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}",
        "fileName": "${logDirectory}/logs-${date:format=yyyy-MM-dd}.log",
        "concurrentWrites": true,
        "keepFileOpen": false,
        "archiveFileName": "${archiveLogDirectory}/logs-{#}.log",
        "archiveEvery": "Day",
        "archiveNumbering": "DateAndSequence",
        "archiveDateFormat": "yyyy-MM-dd__HH_mm_ss",
        "maxArchiveFiles": 100
      },
      "moves": {
        "type": "File",
        "layout": "${message}",
        "fileName": "${logDirectory}/moves-${date:format=yyyy-MM-dd}.log",
        "concurrentWrites": true,
        "keepFileOpen": false,
        "archiveFileName": "${archiveLogDirectory}/moves-{#}.log",
        "archiveEvery": "Day",
        "archiveNumbering": "DateAndSequence",
        "archiveDateFormat": "yyyy-MM-dd__HH_mm_ss",
        "maxArchiveFiles": 100
      },
      "console": {
        "type": "ColoredConsole",
        "layout": "${date:format=HH\\:mm\\:ss} | [${uppercase:${level}}] ${message} ${exception:format=tostring}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          },
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Warn",
            "foregroundColor": "Yellow"
          },
          {
            "condition": "level == LogLevel.Info",
            "foregroundColor": "Gray"
          },
          {
            "condition": "level == LogLevel.Debug",
            "foregroundColor": "DarkGray"
          }
        ],
        "wordHighlightingRules": [
          {
            "regex": "Lynx\\.[^\\s:(|]*",
            "foregroundColor": "DarkGreen"
          },
          {
            "regex": "\\[GUI\\]|debug|go|isready|ponderhit|position|quit|register|setoption|stop|uci|ucinewgame",
            "foregroundColor": "Blue",
            "condition": "level == LogLevel.Debug"
          },
          {
            "regex": "searchmoves|ponder|wtime|btime|winc|binc|movestogo|depth|mate|movetime|infinite|startpos|fen|moves|later|name|author|code",
            "foregroundColor": "DarkMagenta",
            "condition": "level == LogLevel.Debug"
          },
          {
            "regex": "\\[Lynx\\]|bestmove|copyprotection|id|info|option|readyok|registration|uciok",
            "foregroundColor": "Green",
            "condition": "level == LogLevel.Debug"
          },
          {
            "regex": "checking|ok|error|seldepth|depth|time|nodes|pv|multipv|score|cp|mate|lowerbound|upperbound|currmove|currmovenumber|hashfull|nps|tbhits|cpuload|string|refutation|currline",
            "foregroundColor": "DarkMagenta",
            "condition": "level == LogLevel.Debug"
          }
        ]
      }
    },
    "rules": {
      "0": {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "errors"
      },
      "1": {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logs"
      },
      "2": {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "console"
      }
    }
  }
}