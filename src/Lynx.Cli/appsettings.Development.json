{
  "EngineSettings": {
    "DefaultMaxDepth": 3
  },
  "NLog": {
    "targets": {
      "console": {
        "type": "ColoredConsole",
        "layout": "${date:format=HH\\:mm\\:ss} [${uppercase:${level}}] | ${message} ${exception:format=tostring}"
      }
    },
    "rules": {
      "99": {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "moves"
      },
      "100": {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "console"
      }
    }
  }
}
