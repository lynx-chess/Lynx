{
  "GeneralSettings": {
    "EnableTuning": true
  },
  "EngineSettings": {
    //"TranspositionTableSize": 256,
    "EstimateMultithreadedSearchNPS": false,
    "IsChess960": false
  },
  "NLog": {
    "internalLogLevel": "Warn",
    "throwExceptions": true,
    "rules": {

      "1": {
        "logger": "*",
        //"minLevel": "Off",
        "minLevel": "Debug",
        "writeTo": "logs"
      },

      "2": {
        "logger": "*",
        "minLevel": "Off",
        //"minLevel": "Trace",
        "writeTo": "moves"
      },

      "100": {
        "logger": "*",
        //"minLevel": "Warn",
        "minLevel": "Debug",
        "writeTo": "console"
      }
    },
    "targets": {
      "console": {
        "wordHighlightingRules": [
          {
            "Text": "[Lynx]",
            "foregroundColor": "Green",
            "IgnoreCase": true,
            "WholeWords": false
          },
          {
            "Text": "Lynx",
            "foregroundColor": "DarkGreen",
            "IgnoreCase": true,
            "WholeWords": false
          },

          // UCI GUI commands
          {
            "Words": "[GUI],debug,go,isready,ponderhit,position,quit,register,setoption,stop,uci,ucinewgame",
            "foregroundColor": "Blue",
            "IgnoreCase": false,
            "WholeWords": true
          },

          // UCI GUI subcommands
          {
            "Words": "searchmoves,ponder,wtime,btime,winc,binc,movestogo,depth,mate,movetime,infinite,startpos,fen,moves,later,name,value,type,min,max,default,author,code",
            "foregroundColor": "DarkMagenta",
            "IgnoreCase": false,
            "WholeWords": true
          },

          // UCI engine commands
          {
            "Words": "bestmove,copyprotection,id,info,option,readyok,registration,uciok",
            "foregroundColor": "Green",
            "IgnoreCase": false,
            "WholeWords": true
          },

          // UCI Engine subcommands
          {
            "Words": "checking,ok,error,seldepth,depth,time,nodes,pv,multipv,score,cp,mate,lowerbound,upperbound,currmove,currmovenumber,hashfull,nps,tbhits,cpuload,string,refutation,currline,wdl",
            "foregroundColor": "DarkMagenta",
            "IgnoreCase": false,
            "WholeWords": true
          }
        ]
      }
    }
  }
}
